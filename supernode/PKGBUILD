# Maintainer: Nemanja Tosic <nemanja@bluesensenetworks.com>
pkgname=bsn-supernode
pkgver=1.2.0
pkgrel=3
pkgdesc="The supernode application"
arch=('armv7h' 'x86_64')
url=""
license=('GPL')
groups=('bsn')
depends=('nodejs' 'npm' 'bluez4' 'bluez4-utils')
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(
  git+https://github.com/BlueSenseNetworks/hub-application.git#tag=v${pkgver}
  bsn-supernode.service
  bsn-supernode-environment.path
  bsn-supernode-environment.service
)
md5sums=(
  'SKIP'
  'SKIP'
  'SKIP'
  'SKIP'
)

package() {
  cd hub-application

  install -D -m644 "${srcdir}/bsn-supernode.service" "${pkgdir}/usr/lib/systemd/system/bsn-supernode.service"
  install -D -m644 "${srcdir}/bsn-supernode-environment.path" "${pkgdir}/usr/lib/systemd/system/bsn-supernode-environment.path"
  install -D -m644 "${srcdir}/bsn-supernode-environment.service" "${pkgdir}/usr/lib/systemd/system/bsn-supernode-environment.service"

  npm install --production -g --prefix "$pkgdir/usr" .
}
